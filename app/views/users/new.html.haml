.login
  %h2 Login

  = form_tag login_path do
    = label_tag :email
    %br/
    = text_field_tag :email
    %br/
    = label_tag :password
    %br/
    = password_field_tag :password
    %br/
    = submit_tag(value="Login")

.new_user
  %h2 Create New User

  = render 'form'
%br/
